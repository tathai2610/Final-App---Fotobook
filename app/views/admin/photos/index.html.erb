<div class="container-fluid h-100">
    <div class="row page h-100">
      <div class="col-lg-2 pt-3 justify-content-center ">
        <ul class="nav flex-lg-column pl-lg-5 pl-md-5 p-md-auto justify-content-center">
          <li class="nav-item">
            <a class="nav-link text-color font-weight-bold" href="">Manage Photos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-gray font-weight-bold" href="<%=admin_albums_path%>">Manage Albums</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-gray font-weight-bold" href="<%= admin_users_path %>">Manage User</a>
          </li>
        </ul>
      </div>

      <div class="col-lg-8 p-3 h-100">
        <div class="col bg-white h-100 px-lg-4 pb-4">

          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= "#{value}" %></div>
          <% end %>

              <div class="row p-3">
                <% if @photos %>
                <% @photos.each do |photo| %>
                <div class="col-lg-3 col-md-4 col-sm-10 pl-0 mb-4">
                  <%= image_tag photo.image_url, {class:"norotate rounded"} %>
                  <div class="black-title d-flex align-items-center justify-content-between position-absolute">
                    <span class="col-9 overflow "><%=photo.title%></span>
                    <%= link_to raw('<i class="far fa-edit fa-lg text-white"></i>'), edit_admin_photo_path(photo.id), class:"col-3" %>
                  </div>
                </div>
                <% end %>
                <% end %>
              </div>
              <%= paginate @photos%>

          </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
  </div>
