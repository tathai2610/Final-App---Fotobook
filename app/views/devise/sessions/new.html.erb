
    <div class="h1 text-color font-weight-bold text-center mt-5">Fotobook Login</div>
      <div class="container-fluid">
        <div class="row justify-content-center my-2">
            <div class="col-auto col-lg-2 login-box text-center">

          <%= image_tag "icons8-google-60.png", class: "img-fluid rounded-circle mx-lg-2 my-1" %>
          <%= image_tag "icons8-facebook-60.png", class: "img-fluid rounded-circle mx-lg-2 my-1" %>
          <%= image_tag "icons8-twitter-circled-60.png", class: "img-fluid rounded-circle  mx-lg-2 my-1" %>

            </div>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:id => "signin-form"}) do |f| %>
          <div class="row justify-content-center">
              <div class="col-auto col-lg-2 page box-shadow rounded mt-1">

                  <div class="row justify-content-center my-5">
                      <div class="col-auto">
                        <%= image_tag "photo.png", class: "img-fluid rounded-circle", id:"user-slash" %>
                      </div>
                  </div>
                  <div class="row justify-content-center">
                      <div class="col-11 field">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control pr-3 py-4" %>
                          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control pr-3 py-4" %>
                      </div>
                  </div>
                  <div class="row justify-content-center mt-3">
                      <div class="col-auto actions">
                        <%= f.submit "Login", class:"btn avatar float-center px-4 font-weight-bold" %>
                      </div>
                  </div>
                  <div class="row justify-content-center p-3">
                    <div class="col-auto">
                      <p class="notice"><%= notice %></p>
                      <p class="alert"><%= alert %></p>
                    </div>
                  </div>
                  <div class="row justify-content-center mb-2">
                      <div class="col-auto">
                          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                            <%= link_to "Forgot password?", new_password_path(resource_name), class:"text-color font-size text-decoration-none" %><br />
                          <% end %>
                      </div>
                  </div>
              </div>
          </div>
           <div class="row justify-content-center mt-4">
              <div class="col-auto">
                  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                    <%= link_to "Create an account", new_registration_path(resource_name), class:"text-color font-size text-decoration-none" %><br />
                  <% end %>
              </div>
          </div>
      </div>

<% end %>
